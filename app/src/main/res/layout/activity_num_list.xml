<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_c"
    android:orientation="vertical">

    <TextView
        android:id="@+id/num_list_tvw_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:padding="3dp"
        android:textColor="@color/gray_a"
        android:textSize="16sp"
        android:text="@string/step3_tap_first_item_back"
        android:background="@color/green_c"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/num_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/num_list_tvw_tip"
        android:scrollbars="vertical" />

    <ProgressBar
        android:id="@+id/num_list_progressBar"
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"/>

</RelativeLayout>
